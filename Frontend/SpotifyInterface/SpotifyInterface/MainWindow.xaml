<Window x:Class="SpotifyInterface.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpotifyInterface"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_New" />
                <MenuItem Header="_Open" />
                <MenuItem Header="_Save" />
                <Separator />
                <MenuItem Header="_Exit" />
            </MenuItem>
        </Menu>
        <Grid>
            <Label x:Name="Titol" Content="CREAR USUARIS" Width="135" Height="34" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="26,17,0,0"/>

            <Label x:Name="lblID" Content="ID:" Width="45" Height="34" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="26,56,0,0"/>
            <TextBox x:Name="TXTID" TextWrapping="Wrap" Text="" Width="150" Height="34" HorizontalAlignment="Left" Margin="109,57,0,0" VerticalAlignment="Top"/>
            <Button Content="Buscar" Width="60" Height="33" Click="BuscarUser_Click" VerticalAlignment="Top" 
                    HorizontalAlignment="Left" Margin="270,57,0,0"/>

            <Label x:Name="lblName" Content="Nom:" Width="45" Height="34" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="26,108,0,0"/>
            <TextBox x:Name="TXTNom" TextWrapping="Wrap" Text="" Width="150" Height="34" HorizontalAlignment="Left" Margin="109,108,0,0" VerticalAlignment="Top"/>

            <Label x:Name="lblPassword" Content="Password:" Width="66" Height="34" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="28,162,0,0"/>
            <TextBox x:Name="TXTPassword" TextWrapping="Wrap" Text="" Width="150" Height="34" HorizontalAlignment="Left" Margin="109,163,0,0" VerticalAlignment="Top"/>

            <Label x:Name="lblSalt" Content="Salt:" Width="65" Height="34" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="26,208,0,0"/>
            <TextBox x:Name="TXTSalt" TextWrapping="Wrap" Text="" Width="150" Height="34" HorizontalAlignment="Left" Margin="109,208,0,0" VerticalAlignment="Top"/>
            
            
            <Button Content="Obtenir Tots" Width="100" Height="33" Click="GetAllUsers_Click" VerticalAlignment="Top" 
                    HorizontalAlignment="Left" Margin="26,260,0,0"/>

            <Label x:Name="lblLlista" Content="LLISTA D'USUARIS:" Width="150" Height="34" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="26,310,0,0"/>
            <ListBox x:Name="ListaUsers" Width="740" Height="200" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="26,350,0,0"/>

        </Grid>
    </DockPanel>
</Window>