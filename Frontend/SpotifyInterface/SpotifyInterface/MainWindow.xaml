<Window x:Class="SpotifyInterface.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpotifyInterface"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_New" />
                <MenuItem Header="_Open" />
                <MenuItem Header="_Save" />
                <Separator />
                <MenuItem Header="_Exit" />
            </MenuItem>
        </Menu>
        <Label x:Name="lblNom" Content="Nom:" Width="64" Height="34" HorizontalAlignment="Left" VerticalAlignment="Top"/>

        <TextBox x:Name="TXTBNom" TextWrapping="Wrap" Text=" " Width="100" Height="35
                 " HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Button Content="ADD" Width="36" Height="33" Click="AddUser_Click">
           
        </Button>
    </DockPanel>


</Window>
