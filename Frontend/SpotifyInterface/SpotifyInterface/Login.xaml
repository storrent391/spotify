<Window x:Class="SpotifyInterface.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Width="500" Height="450" Background="#D9D9D9">

    <Grid>
        
        <Border Background="#18FF96" CornerRadius="12" Padding="40" Width="450" Height="400"
                HorizontalAlignment="Center" VerticalAlignment="Center">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- TÍTULO -->
                <TextBlock Text="SPOTIFY"
                           FontSize="36"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Grid.Row="0"
                           Margin="0,0,0,10"/>

                <!-- USERNAME (con placeholder real) -->
                <Grid Grid.Row="2" Margin="0,10,0,10">
                    <TextBox x:Name="UsernameTextBox"
                             Height="45" Background="#DFFFD6"
                             Foreground="#000" FontSize="16"
                             Padding="10"
                             TextChanged="UsernameTextBox_TextChanged"/>

                    <TextBlock x:Name="UsernamePlaceholder"
                               Text="Nom d’usuari"
                               Foreground="#777"
                               FontSize="16"
                               Margin="15,0,0,0"
                               VerticalAlignment="Center"
                               IsHitTestVisible="False"/>
                </Grid>

                <!-- PASSWORD -->
                <PasswordBox x:Name="PasswordBox"
                             Height="45" Background="#DFFFD6"
                             Foreground="#000"
                             FontSize="16" Padding="10"
                             Margin="0,10,0,10"
                             Grid.Row="4"/>

                <!-- BOTÓN LOGIN -->
                <Button x:Name="LoginButton"
                        Content="Login"
                        Width="140" Height="45"
                        Background="#0F8A47" Foreground="White"
                        FontSize="16" BorderThickness="0"
                        Margin="0,20,0,0"
                        HorizontalAlignment="Center"
                        Grid.Row="6"
                        Click="LoginButton_Click"/>
            </Grid>
        </Border>
        
    </Grid>
</Window>
