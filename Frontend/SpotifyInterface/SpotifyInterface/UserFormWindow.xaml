<Window x:Class="SpotifyInterface.UserFormWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Usuari"
        Width="450" Height="300"
        WindowStartupLocation="CenterScreen"
        Background="#18FF96">

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Títol -->
            <RowDefinition Height="Auto"/>
            <!-- Nom -->
            <RowDefinition Height="Auto"/>
            <!-- Contrasenya -->
            <RowDefinition Height="*"/>
            <!-- Espai flexible -->
            <RowDefinition Height="Auto"/>
            <!-- Botó -->
        </Grid.RowDefinitions>

        <!-- Títol -->
        <TextBlock Grid.Row="0" Text="Crear Usuari"
                   FontSize="22"
                   FontWeight="Bold"
                   Foreground="Black"
                   Margin="0 0 0 20"/>

        <!-- Nom -->
        <StackPanel Grid.Row="1" Margin="0 0 0 10">
            <TextBlock Text="Nom" FontSize="16" Foreground="#222"/>
            <TextBox x:Name="NameBox"
                     Padding="8"
                     FontSize="16"
                     Background="#DFFFD6"/>
        </StackPanel>

        <!-- Contrasenya -->
        <StackPanel Grid.Row="2" Margin="0 0 0 10">
            <TextBlock Text="Contrasenya" FontSize="16" Foreground="#222"/>
            <PasswordBox x:Name="PasswordBox"
                         Padding="8"
                         FontSize="16"
                         Background="#DFFFD6"/>
        </StackPanel>

        <!-- Botó Guardar -->
        <Button Grid.Row="4"
                Content="Guardar"
                Width="150"
                HorizontalAlignment="Center"
                Background="#0F8A47"
                Foreground="White"
                FontSize="16"
                BorderThickness="0"
                Padding="8"
                Click="Save_Click"/>
    </Grid>
</Window>
